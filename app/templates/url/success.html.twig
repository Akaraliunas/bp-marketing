{% extends 'base.html.twig' %}

{% block title %}Hello UrlController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="mb-4 text-2xl font-extrabold leading-none tracking-tight text-gray-900 dark:text-white">SEO URL checker response! âœ…</h1>

    <div class="url flex justify-start items-start">
        <div class="mb-4 text-md font-normal text-gray-500 lg:text-xl dark:text-gray-400 mr-3">Checked url:</div>
        <div class="text-md font-normal text-white">
            <a class="underline" href="{{ url }}">{{ url }}</a>
        </div>
    </div>

    {% if response.chain %}
        <div class="response-chain mb-4">
            <div class="text-md font-normal text-gray-500 lg:text-xl dark:text-gray-400 mr-3">Redirect chain:</div>
            <ul>
                {% for key, value in response.chain %}
                    <li>{{value }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    {% if response.counter %}
        <div class="response-code mb-4">
            <div class="text-md font-normal text-gray-500 lg:text-xl dark:text-gray-400 mr-3">Redirect count: </div>
            {{ response.counter }}
        </div>
    {% endif %}

    {% if response.keywords %}
        <div class="keywords">
            <div class="text-md font-normal text-gray-500 lg:text-xl dark:text-gray-400 mr-3">Found keywords:</div>
            <ul>
                {% for keyword in response.keywords %}
                    <li>{{ keyword }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

</div>
{% endblock %}
